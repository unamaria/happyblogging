<h2><%= @post.title %></h2>

<p class="meta">posted <%= time_ago_in_words(@post.created_at) %> ago</p>

<article><%= md @post.body %></article>

<% if current_user && current_user.id == @post.blog_item.user_id %>
	<p><%= link_to 'Edit', edit_user_post_item_path(current_user, @post) %></p>
<% end %>

<%= link_to "Back", :back %>

<h3>Comments</h3>

<%= form_for [@post, Comment.new] do |f| %>
  <%= f.label :author, "Your name" %><br/>
  <%= f.text_field :author %>
  <%= f.label :body, "New comment" %><br/>
  <%= f.text_field :body %>
  <p><%= f.submit "Add comment", class: "button" %></p>
<% end %>

<%= render partial: 'shared/comment', collection: @post.blog_item.comments %>
