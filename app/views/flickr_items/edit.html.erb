<h2>Update photo</h2>
<%= form_for @photo, method: 'put', url: {action: "update"} do |f| %>

	<%= f.label :title %><br />
	<%= f.text_field :title, placeholder: @photo.title %><br />
	<%= f.label :description %><br />
  <%= f.text_area :description, placeholder: simple_format(@photo.description) %><br />
  <%= f.submit "Update photo", class: 'button' %>
<% end %>