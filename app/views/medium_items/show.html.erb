<h2><%= @medium.title %></h2>

<p class="meta">posted <%= time_ago_in_words(@medium.created_at) %> ago</p>

<article>
	<%= simple_format(@medium.body) %>
</article>

<% if current_user && current_user.id == @medium.blog_item.user_id %>
	<p><%= link_to 'Edit', edit_user_medium_item_path(current_user, @medium) %></p>
<% end %>

<%= link_to "Back", :back %>

<h3>Comments</h3>

<%= form_for [@medium, Comment.new] do |f| %>
  <%= f.label :author, "Your name" %><br/>
  <%= f.text_field :author %>
  <%= f.label :body, "New comment" %><br/>
  <%= f.text_field :body %>
  <p><%= f.submit "Add comment", class: "button" %></p>
<% end %>

<%= render partial: 'shared/comment', collection: @medium.blog_item.comments, as: :comments %>