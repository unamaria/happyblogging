<h2>Update post from Medium</h2>
<%= form_for @medium, method: 'put', url: {action: "update"} do |f| %>

	<%= f.label :title %><br />
	<%= f.text_field :title, placeholder: @medium.title %><br />
	<%= f.label :body %><br />
  <%= f.text_area :body, placeholder: simple_format(@medium.body) %><br />
  <%= f.submit "Update post", class: 'button button-primary' %>
<% end %>

<%= link_to 'Delete', user_medium_item_path, method: :delete, data: { confirm: "Are you sure?" } %>