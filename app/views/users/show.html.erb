<h2><%= @user.name %></h2>

<h3>Your profile</h3>

<p><strong>Full name:</strong> <%= @user.name %></p>
<p><strong>Blog name:</strong> <%= @user.handle %></p>
<p><strong>Email:</strong> <%= @user.email %></p>

<p><%= link_to 'Edit profile', edit_user_registration_path, class: "button-link" %></p>

<h3>Content</h3>
<p><%= link_to 'Happy posts', user_post_items_path(@user.handle) %></p>
<% if @user.flickr_detail %>
<p><%= link_to 'Photos from Flickr', user_flickr_items_path(@user.handle) %></p>
<% end %>
<% if @user.medium_detail %>
<p><%= link_to 'Posts from Medium', user_medium_items_path(@user.handle) %></p>
<% end %>

<h3>Your account settings</h3>

<p><%= link_to 'Choose blog style', user_edit_path(@user.handle) %></p>

<% if @user.flickr_detail %>
	<p><%= link_to 'Update my Flickr username', edit_user_flickr_detail_path(@user.handle, @user.flickr_detail) %></p>
<% else %>
	<p><%= link_to 'Import photos from my Flickr account', new_user_flickr_detail_path(@user.handle) %></p>
<% end %>

<% if @user.medium_detail %>
	<p><%= link_to 'Update my Medium username', edit_user_medium_detail_path(@user.handle, @user.medium_detail) %></p>
<% else %>
	<p><%= link_to 'Import posts from my Medium account', new_user_medium_detail_path(@user.handle) %></p>
<% end %>

<p><%= link_to 'Sign out', destroy_user_session_path, method: 'delete', class: "button-link button-link-primary" %></p>
<p><%= link_to "Back", :back %></p>