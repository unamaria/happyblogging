<%= form_for [item, Comment.new] do |f| %>
  <% unless current_user %>
	  <%= f.label :author, "Your name" %><br/>
	  <%= f.text_field :author %>
	<% end %>
  <%= f.label :body, "New comment (Markdown supported)" %><br/>
  <%= f.text_area :body, class: "comments-body" %>
  <p><%= f.submit "Add comment", class: "button" %></p>
<% end %>